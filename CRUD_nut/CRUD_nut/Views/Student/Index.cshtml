@* @model NO1.Models.Student;  //ดึงข้อมูล1ก้อน*@
@model IEnumerable<CRUD_nut.Models.StudentModel>;//ดึงข้อมูลเป็นกลุ่มจาก AllStudents ผ่านชื่อโปรเจค/ชื่อคลาส
@{
    ViewData["Title"] = "Indexxx";
}
@if (Model.Count()>0)
{
    <h1>Index</h1>
<table class="table">
    <thead>
 <tr>
        <th>รหัสนักเรียน</th>
        <th>ชื่อนักเรียน</th>
        <th>คะแนนสอบ</th>
        <th>ผลสอบ</th>
        <th>แก้ไข</th>
        <th>ลบ</th>

</tr>
    </thead>
    <tbody>


        @foreach(var student in Model)
{    


     <tr>
    <td>@student.Id</td>
    <td>@student.Name</td>
    <td>@student.Score</td>

    @if (student.Score >= 50)
    {
        <td> สอบผ่าน</td>
    }
    else
    {
        <td>สอบไม่ผ่าน</td> 
    }

    <td><a class="btn btn-danger" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">แก้ไข</a></td>
    <td><a class="btn btn-danger" asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id" onclick="return confirm('คุณต้องกาารลบ @student.Name หรือไม่')">ลบ</a></td>

</tr>

}



    </tbody>
</table>
}else
{
    <div class="alert alert-secondary">ไม่พบข้อมูลนักเรียนในระบบ</div>
}




